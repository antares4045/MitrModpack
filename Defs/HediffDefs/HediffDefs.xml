<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <HediffDef ParentName="DiseaseBase">
    <defName>antares_Damage_GreenCapsule</defName>
    <label>божественный ожог</label>
    <description>божественный ожог</description>
    <isBad>false</isBad>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>45000~120000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>лёгкий</label>
        <painFactor>0.95</painFactor>
        <vomitMtbDays>4</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>50</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <minSeverity>0.3</minSeverity>
        <label>средний</label>
        <painFactor>0.5</painFactor>
        <vomitMtbDays>0.25</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.3</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
        <forgetMemoryThoughtMtbDays>5</forgetMemoryThoughtMtbDays>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>5</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>тяжёлый</label>
        <painFactor>0</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.98</minSeverity>
        <label>убойный</label>
        <painFactor>0</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>


</Defs>