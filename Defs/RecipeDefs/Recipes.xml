            <li>ElectricSmelter</li>
        </recipeUsers>
        <ingredients>
        </ingredients>
        <fixedIngredientFilter>
        </fixedIngredientFilter>
        <products>
            <Steel>75</Steel>
        </products>
        <researchPrerequisite>Smithing</researchPrerequisite>
        <skillRequirements>
            <Crafting>10</Crafting>
        </skillRequirements>
        <workSkill>Crafting</workSkill>
    </RecipeDef>
</Defs>